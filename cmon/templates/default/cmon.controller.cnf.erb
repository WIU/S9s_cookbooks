#
# Generated by Chef for <%= node['ipaddress'] %>
#
# Local modifications will be overwritten.
#
# Controller cmon.cnf
#
cluster_id=<%= node['cmon']['cluster_id'] %>
name=<%= node['cmon']['cluster_name'] %>
type=<%= node['cmon']['cluster_type'] %>

mode=<%= node['cmon']['mode']['controller'] %>

mysql_port=<%= node['cmon']['remote']['mysql_port'] %>
mysql_hostname==<%= node['ipaddress'] %>
mysql_password=<%= node['cmon']['remote']['mysql_password'] %>

local_mysql_port=<%= node['cmon']['local']['mysql_port'] %>
local_mysql_password=<%= node['cmon']['local']['mysql_password'] %>
local_mysql_hostname=<%= node['cmon']['local']['mysql_hostname'] %>
hostname=<%= node['ipaddress'] %>
#The user who owns the core scripts below
osuser=<%= node['cmon']['misc']['os_user'] %>

#location of Configurator script root, e.g /root/mysqlcluster-71/
cmon_core_dir=/root/mysqlcluster-71/

pidfile=<%= node['cmon']['misc']['pid_file'] %>
logfile=<%= node['cmon']['misc']['log_file'] %>
#BUG right now - start/stop nodes/getting logs/start backups etc does not work in daemon mode 
# at this point
nodaemon=<%= node['cmon']['misc']['nodaemon'] %>

db_stats_collection_interval=<%= node['cmon']['misc']['db_stats_collection_interval'] %>
host_stats_collection_interval=<%= node['cmon']['misc']['host_stats_collection_interval'] %>
###### RRD SECTION - graphs ######
mysql_bindir=<%= node['cmon']['mysql']['bin_dir'] %>
imagedir=<%= node['cmon']['rrd']['image_dir'] %>
rrdtool=<%= node['cmon']['rrd']['rrdtool'] %>
rrd_datadir=<%= node['cmon']['rrd']['data_dir'] %>
